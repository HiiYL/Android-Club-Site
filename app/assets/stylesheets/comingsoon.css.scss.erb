p
{
	font-size: 20px;
	margin: 20px 0px;
}

.jumbotron
{
	// background-attachment: fixed;
	background-size: 100%;
	color: white;

	&.top-jumbo
	{
		background: url(<%= asset_path('hardworking_coders-1600.jpg') %>) center right no-repeat;
		height: 650px;

		.container-fluid
		{
			position: relative;
			top: 100%;
			transform: translateY(-75%);
			margin: 0px -30px;

			background: rgba(0, 0, 0, 0.4);
		}
	}

	&.join-jumbo
	{
		// background: url(<%= asset_path('rg-kuching.jpg') %>) center center no-repeat;
		background-color: #2196F3;
		background-size: cover;
		height: 650px;

		.join-box
		{
			color: black;
			background:white;
		}
	}

}

paper-button
{
	&.login-button
	{
		background: #2E7D32;
	}

	&.join-button
	{
		background: #3F51B5;
	}

	&.interested-button
	{
		color: #2196F3;
	}

	&.signup-form-button
	{
		font-size: 20px;
		color: white;
		background: #2196F3;
	}
}

